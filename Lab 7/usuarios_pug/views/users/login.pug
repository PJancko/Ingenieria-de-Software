extends ../layout

block content
  h1 Iniciar Sesión
    if successMessage
      p.success= successMessage
  if errorMessage
    .alert.alert-danger #{errorMessage}
  form(action="/users/login" method="POST")
    .mb-3
      label(for="username") Nombre de Usuario
      input#username.form-control(name="username" type="text" required)
    .mb-3
      label(for="password") Contraseña
      input#password.form-control(name="password" type="password" required)
    button.btn.btn-primary(type="submit") Iniciar Sesión
